<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#669D9D9D"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#66FDFDFD">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >

                <TableRow>
                    <TextView
                        android:fontFamily="@font/dgm_font"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="내 연봉에 맞는 차는? \n 스크롤하여 클릭하세요!"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow>
                    <Button
                        android:fontFamily="@font/dgm_font"
                        android:id="@+id/bt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:text="~1000만원"
                        android:textSize="30dp" />
                </TableRow>

                <TableRow>
                    <Button
                        android:fontFamily="@font/dgm_font"
                        android:id="@+id/bt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:text="1000만원 ~ 2000만"
                        android:textSize="30dp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:fontFamily="@font/dgm_font"
                        android:id="@+id/bt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:text="2000만원 ~ 3000만원"
                        android:textSize="30dp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:fontFamily="@font/dgm_font"
                        android:id="@+id/bt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:text="3000만원 ~ 4000만원"
                        android:textSize="30dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:fontFamily="@font/dgm_font"
                        android:id="@+id/bt5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:text="4000만원 ~ 6000만원"
                        android:textSize="30dp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:fontFamily="@font/dgm_font"
                        android:id="@+id/bt6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:text="6000만원 ~ 8000만원"
                        android:textSize="30dp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:fontFamily="@font/dgm_font"
                        android:id="@+id/bt7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:text="8000만원 ~ 1억원"
                        android:textSize="30dp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:fontFamily="@font/dgm_font"
                        android:id="@+id/bt8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:text="1억원 ~ 1억5천만원"
                        android:textSize="30dp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:fontFamily="@font/dgm_font"
                        android:id="@+id/bt9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:text="1억5천만원 ~"
                        android:textSize="30dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>
        </ScrollView>



    </LinearLayout>
    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </FrameLayout>



</RelativeLayout>