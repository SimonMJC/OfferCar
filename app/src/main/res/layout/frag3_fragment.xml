<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=""/>
    <ImageView
        android:id="@+id/frag3iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/morning" />
  <Button
      android:id="@+id/bt3_1"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="KIA Morning 제원/연비 바로가기!"
      android:textColor="#05413B"
      android:onClick="morningButton"/>
        <Button
            android:id="@+id/bt3_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CHEVROLET Spark 제원/연비 바로가기!"
            android:textColor="#05413B"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추천차량"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="국내 최고의 경차 모닝, 스파크!! "
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" \n 경차로 인한 취등록세 감면과 신차 기준 900만원 대의 저렴한 가격! 사회초년생과 초보운전자들에게 가장 타기 좋은 차로 많은 온라인 커뮤니티와 딜러들이 추천한 차량이다. "
            android:textSize="18dp"/>
    </LinearLayout>
</FrameLayout>